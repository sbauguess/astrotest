---
import i18next from "@i18n/index";
// assets
import SearchIcon from "@uswds/uswds/img/usa-icons-bg/search--white.svg?react";
import CloseIcon from "@uswds/uswds/img/usa-icons/close.svg?react";

const { t } = i18next;
---

<script>
  // @uswds assumes `window` is defined
  import header from "@uswds/uswds/js/usa-header";
  header.on();
</script>
<div class="usa-overlay"></div>
<header class="usa-header usa-header--basic">
  <div class="usa-nav-container">
    <div class="usa-navbar">
      <div class="usa-logo" id="-logo">
        <em class="usa-logo__text">
          <a href="/" title={t("Home")}>{t("Home")}</a>
        </em>
      </div>
      <button type="button" class="usa-menu-btn">{t("Menu")}</button>
    </div>
    <nav aria-label={t("Primary navigation")} class="usa-nav">
      <button type="button" class="usa-nav__close">
        <CloseIcon role="img" aria-label={t("Close")} />
      </button>
      <ul class="usa-nav__primary usa-accordion">
        <li class="usa-nav__primary-item">
          <button
            type="button"
            class="usa-accordion__button usa-nav__link usa-current"
            aria-expanded="false"
            aria-controls="basic-nav-section-one"
          >
            <span>&lt;{t("Current section")}&gt;</span>
          </button>
          <ul id="basic-nav-section-one" class="usa-nav__submenu">
            <li class="usa-nav__submenu-item">
              <a href=""><span>&lt;{t("Navigation link")}&gt;</span></a>
            </li>
            <li class="usa-nav__submenu-item">
              <a href=""><span>&lt;{t("Navigation link")}&gt;</span></a>
            </li>
            <li class="usa-nav__submenu-item">
              <a href=""><span>&lt;{t("Navigation link")}&gt;</span></a>
            </li>
            <li class="usa-nav__submenu-item">
              <a href=""><span>&lt;{t("Navigation link")}&gt;</span></a>
            </li>
          </ul>
        </li>
        <li class="usa-nav__primary-item">
          <button
            type="button"
            class="usa-accordion__button usa-nav__link"
            aria-expanded="false"
            aria-controls="basic-nav-section-two"
          >
            <span>&lt;{t("Section")}&gt;</span>
          </button>
          <ul id="basic-nav-section-two" class="usa-nav__submenu">
            <li class="usa-nav__submenu-item">
              <a href=""><span>&lt;{t("Navigation link")}&gt;</span></a>
            </li>
            <li class="usa-nav__submenu-item">
              <a href=""><span>&lt;{t("Navigation link")}&gt;</span></a>
            </li>
            <li class="usa-nav__submenu-item">
              <a href=""><span>&lt;{t("Navigation link")}&gt;</span></a>
            </li>
          </ul>
        </li>
        <li class="usa-nav__primary-item">
          <a href="" class="usa-nav-link"
            ><span>&lt;{t("Simple link")}&gt;</span></a
          >
        </li>
      </ul>
      <section aria-label={t("Search component")}>
        <form class="usa-search usa-search--small" role="search">
          <label class="usa-sr-only" for="search-field">{t("Search")}</label>
          <input
            class="usa-input"
            id="search-field"
            type="search"
            name="search"
          />
          <button class="usa-button" type="submit">
            <span class="usa-sr-only">{t("Search")}</span>
            <SearchIcon className="usa-search__submit-icon" />
          </button>
        </form>
      </section>
    </nav>
  </div>
</header>
